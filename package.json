{
  "name": "api.conversor.prnewswire",
  "version": "1.0.0",
  "description": "API Para o Sistema de Conversor automático de mídias impressas",
  "main": "server/server.ts",
  "scripts": {
    "start": "npm run serve",
    "build": "gulp",
    "sync-database-test": "cross-env NODE_ENV=test gulp sync-database --force",
    "sync-database-development": "cross-env NODE_ENV=development gulp sync-database --force",    
    "serve": "cross-env NODE_ENV=development nodemon dist/server/server.js",
    "unit-test": "cross-env NODE_ENV=test mocha --opts ./dist/tests/unit/config/mocha.opts ./dist/tests/unit/**/*.test.js",
    "integration-test": "cross-env NODE_ENV=test mocha --opts ./dist/tests/integration/config/mocha.opts ./dist/tests/integration/**/*.test.js",
    "contract-test": "cross-env NODE_ENV=test mocha --opts ./dist/tests/contract/config/mocha.opts ./dist/tests/contract/**/*.test.js",
    "integration-coverage": "nyc --reporter=html npm run integration-test",
    "unit-coverage": "nyc --reporter=html npm run unit-test",
    "test": "npm run unit-test && npm run integration-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mromanjr93/nodejsddd.git"
  },
  "keywords": [
    "Conversor",
    "API",
    "OCR"
  ],
  "author": "Marcelo Roman Junior",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.5.1",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "http": "0.0.0",
    "http-status": "^1.0.1",
    "inversify": "^4.3.0",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "pg": "^7.1.2",
    "reflect-metadata": "^0.1.10",
    "sequelize": "^4.6.0",    
    "tedious": "^2.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.4",
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.8",
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.4",
    "@types/core-js": "^0.9.43",
    "@types/express": "^4.0.36",
    "@types/http-status": "^0.2.30",
    "@types/jwt-simple": "^0.5.33",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^2.2.42",
    "@types/morgan": "^1.7.32",
    "@types/passport": "^0.3.4",
    "@types/passport-jwt": "^2.0.23",
    "@types/sequelize": "^4.0.69",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.1",
    "cross-env": "^5.0.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-typescript": "^3.2.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",    
    "sequelize-cli": "^2.8.0",
    "supertest": "^3.0.0",
    "testdouble": "^3.2.4",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "yargs": "^8.0.2"
  }
}
